@model List<YummyProject.Models.Event>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2>Organizasyon Sayfası</h2>
<table class="table table-bordered table-hover table-secondary">
    <thead>
        <tr>
            <th>#</th>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Ücret</th>
            <th>Resim</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td><img src="@item.ImageUrl" alt="Organizasyon Resmi" style="width:60px; height:50px;" /></td>
                <td>
                    <a href="/Event/UpdateEvent/@item.EventId" class="btn btn-warning">Güncelle</a>
                    <a href="/Event/DeleteEvent/@item.EventId" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Event/AddEvent/" class="btn btn-primary">Organizasyon Ekle</a>

