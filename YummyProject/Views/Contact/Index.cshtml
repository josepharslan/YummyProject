@model List<YummyProject.Models.ContactInfo>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2>İletişim Bilgileri</h2>

<table class="table table-bordered table-hover table-secondary">
    <thead>
        <tr>
            <th>#</th>
            <th>Adres</th>
            <th>Email</th>
            <th>Telefon Numarası</th>
            <th>Harita Url</th>
            <th>Açık Saatler</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.Address</td>
                <td>@item.Email</td>
                <td>@item.PhoneNumber</td>
                <td>@item.MapUrl</td>
                <td>@item.OpenHours</td>
                <td>
                    <a href="/Contact/UpdateContact/@item.ContactInfoId" class="btn btn-warning">Güncelle</a>
                    <a href="/Contact/DeleteContact/@item.ContactInfoId" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Contact/AddContact" class="btn btn-primary">Yeni İletişim Bilgisi Ekle</a>

