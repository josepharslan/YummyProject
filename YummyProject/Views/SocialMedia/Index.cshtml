@model List<YummyProject.Models.SocialMedia>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Sosyal Medya</h2>

<table class="table table-bordered table-secondary table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Url</th>
            <th>Başlık</th>
            <th>İkon</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SocialMediaId</td>
                <td>@item.Title</td>
                <td>@item.Url</td>
                <td>@item.Icon</td>
                <td>
                    <a href="/SocialMedia/Update/@item.SocialMediaId" class="btn btn-warning">Güncelle</a>
                    <a href="/SocialMedia/Delete/@item.SocialMediaId" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/SocialMedia/Create" class="btn btn-primary">Yeni Sosyal Medya Ekle</a>
