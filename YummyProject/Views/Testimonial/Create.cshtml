@model YummyProject.Models.Testimonial

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Referans Ekle</h2>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label>Ad Soyad</label>
        @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", placeholder = "Ad Soyad girin" })
    </div>

    <div class="mb-3">
        <label>Unvan</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        <label>Yorum</label>
        @Html.TextAreaFor(x => x.Comment, 3, 50, new { @class = "form-control", placeholder = "Yorum yazın" })
    </div>

    <div class="mb-3">
        <label>Puan (1-5)</label>
        @Html.TextBoxFor(x => x.Rating, new { @class = "form-control", type = "number", min = "1", max = "5" })
    </div>

    <div class="mb-3">
        <label>Görsel Yükle</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>