@model List<YummyProject.Models.Testimonial>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Referans Listesi</h2>

<table class="table table-bordered table-hover table-secondary">
    <thead class="">
        <tr>
            <th>#</th>
            <th>Görsel</th>
            <th>Ad Soyad</th>
            <th>Unvan</th>
            <th>Yorum</th>
            <th>Puan</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TestimonialId</td>
                <td>
                    <img src="@Url.Content(item.ImageUrl)" style="width:60px; height:60px; border-radius:50%; object-fit:cover;" alt="Foto" />
                </td>
                <td>@item.NameSurname</td>
                <td>@item.Title</td>
                <td>@item.Comment</td>
                <td>
                    @for (int i = 0; i < item.Rating; i++)
                    {
                        <i class="fas fa-star text-warning"></i>
                    }
                    @for (int i = item.Rating; i < 5; i++)
                    {
                        <i class="far fa-star text-muted"></i>
                    }
                </td>
                <td>
                    <a href="/Testimonial/Update/@item.TestimonialId" class="btn btn-sm btn-warning">Güncelle</a>
                    <a href="/Testimonial/Delete/@item.TestimonialId" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="/Testimonial/Create" class="btn btn-primary">Yeni Referans Ekle</a>
