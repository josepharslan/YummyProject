                                <a href="@product.ImageUrl" class="glightbox"><img src="@product.ImageUrl" class="menu-img img-fluid rounded-circle" style="height:220px;" alt=""></a>
                                <h4>@product.ProductName</h4>
                                <p class="ingredients">
                                    @product.Ingredients
                                </p>
                                <p class="price">
