    <div class="container section-title" data-aos="fade-up">
        <h2>Our Menu</h2>
        <p><span>Menümüze</span> <span class="description-title">Göz Atın</span></p>
    </div><!-- End Section Title -->

    <div class="container">

        <ul class="nav nav-tabs d-flex justify-content-center" data-aos="fade-up" data-aos-delay="100">

            @foreach (var category in Model)
            {
                count++;
                <li class="nav-item">
                    <a class="nav-link @(count== 1 ? "active show" : "")" data-bs-toggle="tab" data-bs-target="#menu-@category.CategoryId">
                        <h4>@category.CategoryName</h4>
                    </a>
                </li>
            }

        </ul>

