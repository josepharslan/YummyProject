@model List<YummyProject.Models.PhotoGallery>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Index</h2>
<table class="table table-bordered table-hover table-secondary">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Görsel</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.PhotoGalleryId</th>
                <td>
                    <img src="@item.ImageUrl"
                         alt="Resim"
                         style="width: 150px; height: 80px; object-fit: cover; border-radius: 4px;" />
                </td>
                <td>
                    <a href="/Gallery/UpdatePhoto/@item.PhotoGalleryId" class="btn btn-sm btn-warning">Düzenle</a>
                    <a href="/Gallery/DeletePhoto/@item.PhotoGalleryId" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Gallery/AddPhoto" class="btn btn-primary">Yeni Fotoğraf Ekle</a>
