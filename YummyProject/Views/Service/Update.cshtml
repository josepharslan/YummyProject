@model YummyProject.Models.Service

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmeti Güncelle</h2>

@using (Html.BeginForm("Update", "Service", FormMethod.Post))
{
    @Html.HiddenFor(x => x.ServiceId)

    <div class="form-group">
        <label>Başlık</label>
        @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label>Açıklama</label>
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", rows = 4 })
    </div>

    <div class="form-group">
        <label>İkon</label>
        @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Güncelle</button>
}
