@model List<YummyProject.Models.Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<h2>Kategori Listesi</h2>

<table class="table table-bordered table-hover table-secondary">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <td>@count</td>
                <td>@item.CategoryName</td>
                <td>
                    <a href="/Category/UpdateCategory/@item.CategoryId" class="btn btn-warning">Güncelle</a>
                    <a href="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Category/AddCategory" class="btn btn-primary">Yeni Kategori Ekle</a>
