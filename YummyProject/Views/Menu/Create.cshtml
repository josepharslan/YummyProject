@model YummyProject.Models.Product
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Ürün Ekle</h2>

<form method="post" enctype="multipart/form-data">
    @Html.HiddenFor(x => x.ProductId)

    <div class="mb-3">
        <label>Ürün Adı</label>
        @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control", placeholder = "Ürün adını girin" })
    </div>

    <div class="mb-3">
        <label>Malzemeler</label>
        @Html.TextAreaFor(x => x.Ingredients, 3, 50, new { @class = "form-control", placeholder = "Ürün içeriğini yazın" })
    </div>

    <div class="mb-3">
        <label>Fiyat</label>
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control", type = "number", step = "0.01", placeholder = "₺" })
    </div>

    <div class="mb-3">
        <label>Kategori</label>
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Categories, "Kategori Seçin", new { @class = "form-control" })
    </div>

    <div class="mb-3">
        <label>Ürün Resmi</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Kaydet</button>
</form>

