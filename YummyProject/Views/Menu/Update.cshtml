@model YummyProject.Models.Product

@{
    ViewBag.Title = "Update";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Ürün Güncelle</h2>

<form method="post" enctype="multipart/form-data">
    @Html.HiddenFor(x => x.ProductId)

    <div class="mb-3">
        <label>Ürün Adı</label>
        @Html.TextBoxFor(x => x.ProductName, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        <label>Malzemeler</label>
        @Html.TextAreaFor(x => x.Ingredients, 3, 60, new { @class = "form-control" })
    </div>

    <div class="mb-3">
        <label>Fiyat (₺)</label>
        @Html.TextBoxFor(x => x.Price, new { @class = "form-control", type = "number", step = "0.01" })
    </div>

    <div class="mb-3">
        <label>Kategori</label>
        @Html.DropDownListFor(x => x.CategoryId, (List<SelectListItem>)ViewBag.Categories, "Kategori Seç", new { @class = "form-control" })
    </div>

    <div class="mb-3">
        <label>Aktif Resim</label><br />
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <img src="@Url.Content(Model.ImageUrl)" style="width:150px; border:1px solid #ccc;" />
        }
    </div>

    <div class="mb-3">
        <label>Yeni Resim Yükle</label>
        <input type="file" name="ImageFile" class="form-control" />
    </div>

    <button type="submit" class="btn btn-success">Güncelle</button>
</form>