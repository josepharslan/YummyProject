@model List<YummyProject.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Menü Listesi</h2>

<table class="table table-bordered table-secondary table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Resim</th>
            <th>Ürün Adı</th>
            <th>Malzemeler</th>
            <th>Fiyat</th>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td><img src="@item.ImageUrl" style="width:7rem;" /></td>
                <td>@item.ProductName</td>
                <td>@item.Ingredients</td>
                <td>@item.Price</td>
                <td>@item.Category.CategoryName</td>
                <td>
                    <a href="/Menu/Update/@item.ProductId" class="btn btn-warning">Güncelle</a>
                    <a href="/Menu/Delete/@item.ProductId" class="btn btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="/Menu/Create" class="btn btn-primary">Yeni Ürün Ekle</a>

