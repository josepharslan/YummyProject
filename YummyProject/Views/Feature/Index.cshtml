@model List<YummyProject.Models.Feature>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Öne Çıkan Alan</h2>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Resim</th>
        <th>Başlık</th>
        <th>Açıklama</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.FeatureId</td>
            <td><img src="@item.ImageUrl" style="width:50px;height:50px;" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td class="col">
                <a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-danger">Sil</a>
                <a href="#" class="btn btn-warning">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a href="/Feature/AddFeature" class="btn btn-primary">Yeni Öne Çıkan Alan Ekle</a>